<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio2.MainPage">

    <StackLayout>
        <Label Text="Nombre"/>
        <Entry x:Name="txtNombre"/>
        <Label Text="Apellidos"/>
        <Entry x:Name="txtApellidos"/>
        <Label Text="Edad"/>
        <Entry x:Name="txtEdad" Keyboard="Numeric"/>
        <Label Text="Correo Electrónico"/>
        <Entry x:Name="txtCorreo" Keyboard="Email"/>
        <Button Text="Enviar Información" x:Name="btnEnviarInformacion" Clicked="btnEnviarInformacion_Clicked"/>
    </StackLayout>

</ContentPage>
